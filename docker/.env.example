# =============================================================================
# PPT Docker Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Usage: cp docker/.env.example .env

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=ppt
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=ppt

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis URL is constructed automatically from service name
# REDIS_URL=redis://redis:6379

# =============================================================================
# Security
# =============================================================================
# JWT secret for token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string-minimum-32-chars

# =============================================================================
# S3-Compatible Storage (MinIO / AWS S3 / Synology C2)
# =============================================================================
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=ppt-documents
S3_REGION=us-east-1

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
# Example: https://ppt.example.com,https://reality.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Frontend Configuration
# =============================================================================
# API URLs for frontend applications
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8081
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# =============================================================================
# Logging
# =============================================================================
# Log level: error, warn, info, debug, trace
RUST_LOG=info

# =============================================================================
# Container Registry (for production)
# =============================================================================
REGISTRY=ghcr.io/hanibalsk
VERSION=latest

# =============================================================================
# Timezone
# =============================================================================
TZ=Europe/Bratislava
