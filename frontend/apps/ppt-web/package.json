{
  "name": "@ppt/web",
  "private": true,
  "description": "Property Management Web Application (React SPA)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build && echo 'Bundle analysis available at dist/stats.html'",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "vitest run src/**/*.a11y.test.tsx"
  },
  "dependencies": {
    "@ppt/api-client": "workspace:*",
    "@ppt/shared": "workspace:*",
    "@ppt/sitemap": "workspace:*",
    "@ppt/ui-kit": "workspace:*",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.0",
    "dompurify": "^3.3.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.1",
    "react-router-dom": "^6.21.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^2.1.8",
    "axe-core": "^4.11.1",
    "jsdom": "^25.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^2.1.8",
    "vitest-axe": "^0.1.0"
  },
  "version": "0.2.327"
}
