{
  "name": "ppt-frontend",
  "private": true,
  "description": "PPT Frontend Monorepo",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev:ppt": "pnpm --filter @ppt/web dev",
    "dev:reality": "pnpm --filter @ppt/reality-web dev",
    "dev:mobile": "pnpm --filter @ppt/mobile start",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "generate-api": "pnpm --filter @ppt/api-client generate",
    "generate-reality-api": "pnpm --filter @ppt/reality-api-client generate",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
